<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leon.dingoapplication.Activities.EatDrinkActivity"
    android:background="@color/white">

    <RelativeLayout android:id="@+id/dealHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Deal at 13:00"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Rank By"
            android:textColor="@color/white" />
        </RelativeLayout>

    <ListView android:id="@+id/dealList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dealHeader"/>

    <TextView android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dealHeader"
        android:gravity="center" />

</RelativeLayout>
